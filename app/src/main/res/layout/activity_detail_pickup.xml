<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.order.pickup.DetailPickupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageThumbnail"
            android:layout_width="match_parent"
            android:layout_height="196dp" />

        <TextView
            android:layout_margin="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textMitraName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Toko Jaya Faisal"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center|start"
                android:text="Spesialis"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textSpesialis"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center|start"
                android:text="Televisi"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center|start"
                android:text="Lokasi Mitra"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textLocation"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center|start"
                android:text="Televisi"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center|start"
                android:text="Testimoni"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textTestimony"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center|start"
                android:text="Televisi"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/textRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center|start"
                android:text="4,3/5"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_call_normal_primary"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center|start"
                android:text="081287616776"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laporkan Mitra ini"
            android:fontFamily="@font/montserrat"
            android:textColor="#EF5350"/>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:maxImageSize="36dp"
        android:src="@drawable/ic_pick_up_white"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:rippleColor="@color/colorAccent"
        android:onClick="sendOrderTask"/>
</RelativeLayout>