<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.profile.EditProfileActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textAlignment="center"
            android:fontFamily="@font/happy_monkey"
            android:textSize="16dp"
            android:padding="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEmailAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputNoTlp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="No Telephone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputMitraID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Mitra ID"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputNamaBengkel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Bengkel"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAlamatBengkel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Alamat Bengkel"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specialist"
            android:paddingLeft="5dp"
            android:textSize="16dp"
            android:layout_marginVertical="10dp"/>

        <LinearLayout
            android:id="@+id/formSPElektronik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/spTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TV"/>
                <CheckBox
                    android:id="@+id/spKulkas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kulkas"/>
                <CheckBox
                    android:id="@+id/spMesinCuci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mesin Cuci"/>
                <CheckBox
                    android:id="@+id/spKipas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kipas Angin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/spKamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penanak Nasi"/>
                <CheckBox
                    android:id="@+id/spPenanakNasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamera"/>
                <CheckBox
                    android:id="@+id/spOven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oven"/>

                <CheckBox
                    android:id="@+id/spPonsel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ponsel"/>

                <CheckBox
                    android:id="@+id/spRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radio"/>

                <CheckBox
                    android:id="@+id/spAC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/formSPKendaraan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/spMotor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motor"/>
            <CheckBox
                android:id="@+id/spMobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobil"/>
            <CheckBox
                android:id="@+id/spSepeda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sepeda"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="SIMPAN"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            />

    </LinearLayout>

</ScrollView>