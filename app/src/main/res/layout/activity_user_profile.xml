<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.profile.UserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorPrimaryDark">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/profilemale"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:elevation="2dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_account"
                    android:padding="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/happy_monkey"
                        android:padding="5dp"
                        android:text="Full Name"
                        android:textStyle="bold"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/viewFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/happy_monkey"
                        android:paddingHorizontal="5dp"
                        android:text="Full Name"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:lines="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mail"
                    android:padding="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/happy_monkey"
                        android:padding="5dp"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/viewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/happy_monkey"
                        android:paddingHorizontal="5dp"
                        android:text="example@gmail.com"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:lines="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_phone"
                    android:padding="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/happy_monkey"
                        android:padding="5dp"
                        android:text="Phone"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/happy_monkey"
                        android:paddingHorizontal="5dp"
                        android:text="+6289912345678"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:lines="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutMitra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_mitra"
                        android:padding="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happy_monkey"
                            android:padding="5dp"
                            android:text="Mitra ID"
                            android:textStyle="bold"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/viewMitraid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happy_monkey"
                            android:paddingHorizontal="5dp"
                            android:text="JD00123456"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:lines="1"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_house"
                        android:padding="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happy_monkey"
                            android:padding="5dp"
                            android:text="Nama Bengkel"
                            android:textStyle="bold"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/viewNamaBengkel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happy_monkey"
                            android:paddingHorizontal="5dp"
                            android:text="MAJU JAYA"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:lines="1"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_marker"
                        android:padding="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happy_monkey"
                            android:padding="5dp"
                            android:text="Alamat Mitra"
                            android:textStyle="bold"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/viewAlamatMitra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happy_monkey"
                            android:paddingHorizontal="5dp"
                            android:text="Jl.Kebembem Raya Timur"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:maxLines="3"
                            android:lines="1"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_build"
                        android:padding="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happy_monkey"
                            android:padding="5dp"
                            android:text="Specialist"
                            android:textStyle="bold"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/viewSpecialist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happy_monkey"
                            android:paddingHorizontal="5dp"
                            android:text="TV,Kulkas,MesinCuci,Kipas Angin"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:maxLines="3"
                            android:lines="1"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_marginHorizontal="12dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingRight="12dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_create"
                    android:text="UBAH"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_oval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>